<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EditarPerfil"
    android:background="@color/icons">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/fete1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edita perfil"
            android:textColor="@color/colorPrimary"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:id="@+id/nombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/divider"
            android:textColor="@color/primary_text"
            android:hint="Nombre "/>
        <EditText
            android:id="@+id/apellidosUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/divider"
            android:textColor="@color/primary_text"
            android:hint="Apellidos "/>
        <EditText
            android:id="@+id/correoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/divider"
            android:textColor="@color/primary_text"
            android:hint="Correo "/>
        <EditText
            android:id="@+id/mupoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/divider"
            android:textColor="@color/primary_text"
            android:hint="Municipio-Estado (Guadalupe, Zac)"/>
        <EditText
            android:id="@+id/estadoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/divider"
            android:textColor="@color/primary_text"
            android:hint="Municipio-Estado (Guadalupe, Zac)"/>
        <Button
            android:id="@+id/btnGuardaPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Datos"
            android:textColor="@color/icons"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:background="@color/Azul"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/btnModificaResenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="administra reseÃ±as"
            android:textColor="@color/icons"
            android:textSize="15sp"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:background="@color/Azul"
            android:layout_marginTop="20dp"/>


    </LinearLayout>
</ScrollView>