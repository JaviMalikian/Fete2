<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:name="com.google.android.gms.maps.SupportMapFragment"    tools:context=".Fragments.MapFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map1"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAqui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="140dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorAccent"
        android:tooltipText="Aqui estoy"
        android:src="@drawable/ic_person_pin_circle_black_24dp"
        android:backgroundTint="@color/Azul"
        app:borderWidth="0dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorAccent"
        android:tooltipText="Todos los eventos"
        android:src="@drawable/ic_location_on_black_24dp"
        android:backgroundTint="@color/Azul"
        app:borderWidth="0dp"/>
    <Button
        android:id="@+id/btnVerLita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Ver lista de eventos"
        android:textColor="#F5F5F5"
        android:src="@android:drawable/ic_input_add"
        android:backgroundTint="#212121"
        />

</FrameLayout>